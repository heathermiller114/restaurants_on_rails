<h1>Reviews for <%= link_to @restaurant.name, restaurant_path(@restaurant) %></h1>

<div>
  <h5>Filter Reviews:</h5>
  <%= form_tag("/restaurants/#{@restaurant.id}/reviews", method: 'get') do %>
    <%= select_tag 'review', options_for_select(['High to Low', 'Low to High']), include_blank: "Sort Reviews" %>
    <%= submit_tag "Filter" %>
  <% end %>
</div>

<div>
  <% if @reviews == [] %>
      <h3>Looks like there aren't any reviews yet! Been here before? Write one <%= link_to "here!", new_restaurant_review_path(@restaurant) %></h3>
  <% else %>
    <% @reviews.each do |review| %>
        <h3>Written by <%= review.user.username %> on <%= review.created_at.strftime("%b %d, %Y") %></h3>
        <%= review.title %><br><br>
        <%= review.content %>
        <h4>Star rating: <%= review.star_rating %></h4>
        <br><br>
    <% end %>
  <% end %>
</div>