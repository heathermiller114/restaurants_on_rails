<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantsOnRails</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <% if logged_in? %>
        <nav class="navbar navbar-expand-lg navbar-light">
          <a class="navbar-brand" href="/">RoR</a>
          <form class="form-inline">
            <%= link_to "Log Out", logout_path, method: :delete, :class =>"btn btn-outline-primary" %>
            <div style="padding-left: 10px;">
              <a class="btn btn-outline-primary" href="/restaurants" role="button">Home</a>
            </div>
            <div style="padding-left: 10px;">
              <a class="btn btn-outline-primary" href="/restaurants/new" role="button">Add New Restaurant</a>
            </div>
          </form>
        </nav>
      <% else %>
        <nav class="navbar navbar-light bg-light">
          <a class="navbar-brand" href="/">RoR</a>
          <form class="form-inline">
            <a class="btn btn-outline-primary" href="/login" role="button">Login</a>
            <div style="padding-left: 10px;">
                <a class="btn btn-outline-primary" href="/auth/google_oauth2" role="button">Login with Google</a>
            </div>
            <div style="padding-left: 10px;">
              <a class="btn btn-outline-success" href="/signup" role="button">Sign Up</a>
            </div>
          </form>
        </nav>
      <% end %>
    </div>

    <div class="wrapper">
    
      <%= yield %>

    </div>
  </body>
</html>
